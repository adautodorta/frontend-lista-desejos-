{
    "info": {
      "name": "Lista de Desejos API Tests",
      "description": "Testes automatizados para a API do sistema de lista de desejos",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      {
        "key": "baseUrl",
        "value": "https://your-project.supabase.co",
        "type": "string"
      },
      {
        "key": "anonKey",
        "value": "your-anon-key",
        "type": "string"
      },
      {
        "key": "accessToken",
        "value": "",
        "type": "string"
      },
      {
        "key": "userId",
        "value": "",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "1. Login User",
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status code is 200', function () {",
                "    pm.response.to.have.status(200);",
                "});",
                "",
                "pm.test('Response has user data', function () {",
                "    const jsonData = pm.response.json();",
                "    pm.expect(jsonData).to.have.property('user');",
                "    pm.expect(jsonData.user).to.have.property('id');",
                "    pm.collectionVariables.set('userId', jsonData.user.id);",
                "});",
                "",
                "pm.test('Response has access token', function () {",
                "    const jsonData = pm.response.json();",
                "    pm.expect(jsonData).to.have.property('access_token');",
                "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                "});"
              ]
            }
          }
        ],
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            },
            {
              "key": "apikey",
              "value": "{{anonKey}}"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"email\": \"daudauteste@gmail.com\",\n  \"password\": \"admin123\"\n}"
          },
          "url": {
            "raw": "{{baseUrl}}/auth/v1/token?grant_type=password",
            "host": ["{{baseUrl}}"],
            "path": ["auth", "v1", "token"],
            "query": [
              {
                "key": "grant_type",
                "value": "password"
              }
            ]
          }
        }
      },
      {
        "name": "2. Test Invalid Login",
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status code is 400 for invalid credentials', function () {",
                "    pm.response.to.have.status(400);",
                "});"
              ]
            }
          }
        ],
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            },
            {
              "key": "apikey",
              "value": "{{anonKey}}"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"email\": \"invalid@example.com\",\n  \"password\": \"wrongpassword\"\n}"
          },
          "url": {
            "raw": "{{baseUrl}}/auth/v1/token?grant_type=password",
            "host": ["{{baseUrl}}"],
            "path": ["auth", "v1", "token"],
            "query": [
              {
                "key": "grant_type",
                "value": "password"
              }
            ]
          }
        }
      }
    ]
  }